        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ЭкзаменСавинов"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF194DFB" MinWidth="300" MinHeight="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="296*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="frmMain" Content="Frame" HorizontalAlignment="Left"  Grid.Row="1" NavigationUIVisibility="Hidden" VerticalAlignment="Top" Height="276" Width="792"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Grid.Row="0"  VerticalAlignment="Center"   >
            <Image HorizontalAlignment="Left" Height="86"  VerticalAlignment="Top" Width="100" Source="Resources/picture.png"/>
            <Label Style="{StaticResource Os}"  HorizontalAlignment="Center" VerticalAlignment="Center" Content="Магазин констоваров" Grid.Row="0" Foreground="#FF102770"  />



        </StackPanel>
        


    </Grid>
</Window>
