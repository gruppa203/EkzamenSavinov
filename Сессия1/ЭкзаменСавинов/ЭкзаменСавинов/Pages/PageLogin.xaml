<Page x:Class="ЭкзаменСавинов.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ЭкзаменСавинов.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin" Background="#FF194DFB">

    <Grid>
        <StackPanel HorizontalAlignment="Center"  VerticalAlignment="Center" >
            <StackPanel >
                <Label Style="{StaticResource Os2}" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Авторизвция"/>
                <Label Style="{StaticResource Os3}" Content="Логин" Foreground="White" Margin="10,0,250,0"/>
                <Label Style="{StaticResource Os3}" Content="Пароль" Margin="10,10,238,0"/>
                <PasswordBox x:Name="psbPassword" HorizontalAlignment="Right" Width="223" Margin="0,-25,16,0" />
                <TextBox x:Name="txbLogin" Height="24" TextWrapping="Wrap"  HorizontalAlignment="Right" Width="223" Margin="0,-95,16,0"/>

                <Button Style="{StaticResource button}" x:Name="btnVxod"  Content="Войти" Margin="16,10,16,0" Background="#FF0B38CD" Click="btnVxod_Click" />
            </StackPanel>


        </StackPanel>


    </Grid>
</Page>
